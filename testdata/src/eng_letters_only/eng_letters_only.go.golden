package eng_letters_only

import (
	"context"
	"log/slog"

	"go.uber.org/zap"
)

func testsSlogMessages() {
	ctx := context.Background()
	l := slog.Default()

	const (
		slogConstBadRu   = "const –û—à–∏–±–∫–∞"
		slogConstBadMix  = "constŒîmix"
		slogConstGood    = "const english"
		slogConstOnlyBad = "–ü—Ä–∏–≤–µ—Ç"
	)

	var slogVar = "var –û—à–∏–±–∫–∞"

	slog.Debug("plain english")
	slog.Info("error")                  // want "log message must contain only English letters"
	slog.Warn("alpha")                  // want "log message must contain only English letters"
	slog.Error("mix")                   // want "log message must contain only English letters"
	slog.DebugContext(ctx, "caf issue") // want "log message must contain only English letters"
	slog.InfoContext(ctx, "a b")        // want "log message must contain only English letters"
	slog.WarnContext(ctx, "–ü—Ä–∏–≤–µ—Ç")     // want "log message must contain only English letters"
	slog.ErrorContext(ctx, "emoji üòÄ ok")
	slog.Log(ctx, slog.LevelInfo, "once")     // want "log message must contain only English letters"
	slog.LogAttrs(ctx, slog.LevelInfo, ": t") // want "log message must contain only English letters"

	slog.Debug(slogConstBadRu)             // want "log message must contain only English letters"
	slog.InfoContext(ctx, slogConstBadMix) // want "log message must contain only English letters"
	slog.WarnContext(ctx, slogConstGood)
	slog.ErrorContext(ctx, slogConstOnlyBad) // want "log message must contain only English letters"

	l.Debug(slogVar)
}

func testsZapMessages() {
	l := &zap.Logger{}
	s := &zap.SugaredLogger{}

	const (
		zapConstBad = "zap –û—à–∏–±–∫–∞"
		zapConstOk  = "zap english"
	)

	var zapVar = "zap var –û—à–∏–±–∫–∞"

	l.Debug("zap") // want "log message must contain only English letters"
	l.Info("zap")  // want "log message must contain only English letters"
	l.Warn("warn ok")
	l.Error("start")   // want "log message must contain only English letters"
	l.DPanic("panic")  // want "log message must contain only English letters"
	l.Panic("–†—É—Å—Å–∫–∏–π") // want "log message must contain only English letters"
	l.Fatal("final ok")

	s.Debug("sugar") // want "log message must contain only English letters"
	s.Info("sugar ok")
	s.Warn("warn") // want "log message must contain only English letters"
	s.Error("error ok")
	s.DPanic("panic") // want "log message must contain only English letters"
	s.Panic("panic ok")
	s.Fatal("fatal") // want "log message must contain only English letters"

	s.Debugf("format %s") // want "log message must contain only English letters"
	s.Infof("fmt value")  // want "log message must contain only English letters"
	s.Warnf("fmt ok")
	s.Errorf("fmt")  // want "log message must contain only English letters"
	s.DPanicf("fmt") // want "log message must contain only English letters"
	s.Panicf("panicf ok")
	s.Fatalf("fmt") // want "log message must contain only English letters"

	s.Debugw("w v") // want "log message must contain only English letters"
	s.Infow("w ok")
	s.Warnw("w") // want "log message must contain only English letters"
	s.Errorw("w ok 2")
	s.DPanicw("ww") // want "log message must contain only English letters"
	s.Panicw("w ok 3")
	s.Fatalw("w") // want "log message must contain only English letters"

	s.Debugln("ln test") // want "log message must contain only English letters"
	s.Infoln("ln ok")
	s.Warnln("ln") // want "log message must contain only English letters"
	s.Errorln("ln ok 2")
	s.DPanicln("‰∏≠Êñá") // want "log message must contain only English letters"
	s.Panicln("ln ok 3")
	s.Fatalln("ln") // want "log message must contain only English letters"

	l.Info(zapConstBad) // want "log message must contain only English letters"
	s.Infof(zapConstOk)

	s.Warn(zapVar)
}
